# .env.example — ADVL Application Environment Variables
# Copy this file to .env and fill in your values.
# Never commit .env to version control.

# ─────────────────────────────────────────────
# LLM Configuration
# ─────────────────────────────────────────────
ADVL_LLM_PROVIDER=openrouter          # openrouter | anthropic | openai
ADVL_LLM_MODEL=anthropic/claude-sonnet-4-6
ADVL_LLM_API_KEY=your_key_here

# ─────────────────────────────────────────────
# Agent Configuration
# ─────────────────────────────────────────────
ADVL_AGENT_PORT=7433                  # WebSocket port the agent listens on
ADVL_AGENT_LOG_LEVEL=info             # debug | info | warn | error

# ─────────────────────────────────────────────
# Server Mode (only needed when running as server, not Electron)
# ─────────────────────────────────────────────
ADVL_SERVER_PORT=3000
ADVL_SERVER_AUTH_ENABLED=false        # Set true for multi-user hosted mode
ADVL_SERVER_AUTH_SECRET=changeme      # Change this in production

# ─────────────────────────────────────────────
# Electron (set automatically by Electron main process — do not set manually)
# ─────────────────────────────────────────────
# ADVL_PLATFORM=electron
